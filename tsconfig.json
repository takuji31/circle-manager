{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowJs": false,
    "outDir": "./",
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": ""
    }
  ],
  "include": ["packages/*/src"]
}
