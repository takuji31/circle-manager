{
  "compilerOptions": {
    "incremental": true,
    "baseUrl": "./src",
    "target": "es2016",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["ESNext"],
    "paths": {
      "@circle-manager/shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["./src/**/*"]
}
