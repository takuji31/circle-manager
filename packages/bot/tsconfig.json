{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "paths": {
      "*": ["../node_modules/*", "./*"],
      "database": ["../../database/src"],
      "model": ["../../model/src"],
      "@circle-manager/*": ["../../@circle-manager/*/src"]
    }
  },
  // "include": ["./src/**/*"],
  "references": [
    {
      "path": "../database"
    },
    {
      "path": "../model"
    },
    {
      "path": "../@circle-manager/discord"
    },
    {
      "path": "../@circle-manager/redis"
    }
  ]
}
